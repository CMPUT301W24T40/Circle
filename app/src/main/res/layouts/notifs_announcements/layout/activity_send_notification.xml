<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".SendNotificationActivity">

    <TextView
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send attendees of your event a notification!"
        android:textSize="20sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/notif_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:padding="10dp"
        android:hint="max. 50 chars"
        android:inputType="text"
        android:maxLength="50" />

    <TextView
        android:id="@+id/title_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notif_title"
        android:text="A title to let attendees know what you are notifying them about."
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_description"
        android:text="Body"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/notif_body"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/body"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:padding="10dp"
        android:hint="max. 200 chars"
        android:inputType="textMultiLine"
        android:maxLength="200" />

    <TextView
        android:id="@+id/body_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notif_body"
        android:text="Write what you are going to let your attendees know."/>


    <Button
        android:id="@+id/send_notif_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body_description"
        android:layout_marginTop="20dp"
        android:text="Send" />

</RelativeLayout>